<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/matrix_black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mathExpressionView"
        style="@style/MathExpression"/>

    <TextView
        android:id="@+id/mathResultView"
        style="@style/MathResult"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            style="@style/OperatorButtons"
            android:text="C"
            android:onClick="clearOnClick"/>

        <Button
            style="@style/OperatorButtons"
            android:text="/"
            android:onClick="divisionOnClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/NumberButtons"
            android:text="7"
            android:onClick="sevenOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="8"
            android:onClick="eightOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="9"
            android:onClick="nineOnClick"/>

        <Button
            style="@style/OperatorButtons"
            android:text="X"
            android:onClick="multiplicationOnClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/NumberButtons"
            android:text="4"
            android:onClick="fourOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="5"
            android:onClick="fiveOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="6"
            android:onClick="sixOnClick"/>

        <Button
            style="@style/OperatorButtons"
            android:text="-"
            android:onClick="subtractionOnClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/NumberButtons"
            android:text="1"
            android:onClick="oneOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="2"
            android:onClick="twoOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="3"
            android:onClick="threeOnClick"/>

        <Button
            style="@style/OperatorButtons"
            android:text="+"
            android:onClick="additionOnClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/NumberButtons"
            android:text=","
            android:onClick="separatorOnClick"/>

        <Button
            style="@style/NumberButtons"
            android:text="0"
            android:onClick="zeroOnClick"/>

        <Button
            style="@style/OperatorButtons"
            android:text="@string/backspace"
            android:onClick="backspaceOnClick"/>

        <Button
            style="@style/OperatorButtons"
            android:text="="
            android:onClick="equalsOnClick"/>
    </LinearLayout>
</LinearLayout>

