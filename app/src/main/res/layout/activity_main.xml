<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/matrix_black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mathExpression"
        style="@style/MathExpression"/>

    <TextView
        android:id="@+id/mathResult"
        style="@style/MathResult"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/operator_clear"
            style="@style/OperatorButtons"
            android:text="C"/>

        <TextView
            android:id="@+id/operator_division"
            style="@style/OperatorButtons"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_seven"
            style="@style/NumberButtons"
            android:text="7"/>

        <TextView
            android:id="@+id/number_eight"
            style="@style/NumberButtons"
            android:text="8"/>

        <TextView
            android:id="@+id/number_nine"
            style="@style/NumberButtons"
            android:text="9"/>

        <TextView
            android:id="@+id/operator_multiplication"
            style="@style/OperatorButtons"
            android:text="X"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_four"
            style="@style/NumberButtons"
            android:text="4" />

        <TextView
            android:id="@+id/number_five"
            style="@style/NumberButtons"
            android:text="5"/>

        <TextView
            android:id="@+id/number_six"
            style="@style/NumberButtons"
            android:text="6"/>

        <TextView
            android:id="@+id/operator_subtraction"
            style="@style/OperatorButtons"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_one"
            style="@style/NumberButtons"
            android:text="1"/>

        <TextView
            android:id="@+id/number_two"
            style="@style/NumberButtons"
            android:text="2"/>

        <TextView
            android:id="@+id/number_three"
            style="@style/NumberButtons"
            android:text="3"/>

        <TextView
            android:id="@+id/operator_addition"
            style="@style/OperatorButtons"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/separator"
            style="@style/NumberButtons"
            android:text=","/>

        <TextView
            android:id="@+id/number_zero"
            style="@style/NumberButtons"
            android:text="0"/>

        <TextView
            android:id="@+id/backspace"
            style="@style/OperatorButtons"
            android:text="@string/backspace"/>

        <TextView
            android:id="@+id/operator_equals"
            style="@style/OperatorButtons"
            android:text="="/>
    </LinearLayout>
</LinearLayout>

